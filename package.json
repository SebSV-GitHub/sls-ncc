{
	"name": "@sebsv/sls-ncc",
	"version": "0.0.1-1",
	"type": "module",
	"description": "Serverless plugin to build functions with @vercel/ncc",
	"exports": "./dist/index.js",
	"imports": {
		"#*": {
			"development": "./src/*",
			"testing": "./*",
			"default": "./dist/*"
		}
	},
	"scripts": {
		"test": "TSX_TSCONFIG_PATH=./tests/tsconfig.json c8 ava",
		"prepack": "npm run build",
		"prestart": "npm link && cd integration && npm link @sebsv/sls-ncc",
		"start": "cd integration && npm start",
		"build": "tsc",
		"prepare": "husky"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/SebSV-GitHub/sls-ncc.git"
	},
	"keywords": [
		"TypeScript",
		"Template"
	],
	"author": "Sebastián Suárez Valencia <contact@sebsv.com> (https://www.sebsv.com)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/SebSV-GitHub/sls-ncc/issues"
	},
	"homepage": "https://github.com/SebSV-GitHub/sls-ncc#readme",
	"engines": {
		"node": ">=22"
	},
	"devDependencies": {
		"@tsconfig/node22": "^22.0.0",
		"@types/archiver": "^6.0.3",
		"@types/lodash": "^4.17.15",
		"@types/node": "^22.13.4",
		"@types/serverless": "^3.12.27",
		"ava": "^6.2.0",
		"c8": "^10.1.3",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3",
		"tsx": "^4.19.2",
		"typescript": "^5.6.3",
		"xo": "^0.59.3"
	},
	"ava": {
		"extensions": [
			"ts"
		],
		"files": [
			"tests/**/*.test.ts"
		],
		"nodeArguments": [
			"--import=tsx",
			"--conditions=testing"
		]
	},
	"dependencies": {
		"@vercel/ncc": "^0.38.3",
		"archiver": "^7.0.1",
		"chalk": "^5.4.1",
		"lodash": "^4.17.21",
		"serverless": "^4.6.3"
	}
}
