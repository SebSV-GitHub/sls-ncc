{
	"name": "@sebsv/node-package-typescript-template",
	"version": "1.0.0",
	"type": "module",
	"description": "TypeScript template",
	"exports": "./dist/index.js",
	"imports": {
		"#*": {
			"development": "./src/*",
			"testing": "./*",
			"default": "./dist/*"
		}
	},
	"scripts": {
		"test": "TSX_TSCONFIG_PATH=./tests/tsconfig.json c8 ava",
		"prepack": "npm run build",
		"prestart": "npm run build",
		"start": "cd integration && npm start",
		"build": "tsc",
		"prepare": "husky"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/SebSV-GitHub/Node-package-TypeScript-template.git"
	},
	"keywords": [
		"TypeScript",
		"Template"
	],
	"author": "Sebastián Suárez Valencia <contact@sebsv.com> (https://www.sebsv.com)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/SebSV-GitHub/Node-package-TypeScript-template/issues"
	},
	"homepage": "https://github.com/SebSV-GitHub/Node-package-TypeScript-template#readme",
	"engines": {
		"node": ">=22"
	},
	"devDependencies": {
		"@tsconfig/node22": "^22.0.0",
		"@types/node": "^22.13.4",
		"ava": "^6.2.0",
		"c8": "^10.1.3",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3",
		"tsx": "^4.19.2",
		"typescript": "^5.6.3",
		"xo": "^0.59.3"
	},
	"ava": {
		"extensions": [
			"ts"
		],
		"files": [
			"tests/**/*.test.ts"
		],
		"nodeArguments": [
			"--import=tsx",
			"--conditions=testing"
		]
	},
	"dependencies": {
		"chalk": "^5.4.1"
	}
}
